{
  "manifest_version": 2,
  "name": "Original GitHub Bar",
  "version": "1.0.0",
  "description": "Bring back the original GitHub's bar",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon64.png"
  },
  "author": "Alex <alxmorais8@msn.com>",
  "content_scripts" : [{
    "matches" : ["*://github.com/*", "*://*.github.com/*"],
    "css": ["main.css"],
    "run_at": "document_start"
  }],
  "homepage_url": "https://github.com/alxhotel/original-github-bar-color",
  "permissions": [
    "*://github.com/*",
    "*://*.github.com/*",
    "storage"
  ],
  "short_name": "Original GitHub Bar"
}
